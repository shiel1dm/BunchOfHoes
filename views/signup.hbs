<div class="container center">
  <div class="row">
    <div class="col s8 center">
      <div class="card-panel center z-depth-5">
        <h4 class="center teal-text text-darken-2"> Sign-up</h4>
        <form action="" id="sign-up" method="POST" class="row">
          <div class="input-field col s12">
            <i class="mdi-communication-email prefix"></i>
            <input id="icon_email" class="validate">
            <label for="icon_email">Your Username</label>
          </div>
          <div class="input-field col s12">
            <i class="fa fa-unlock-alt prefix"></i>
            <input id="icon_password" type="password" class="validate">
            <label for="icon_password">Password</label>
          </div>
          <button class="btn waves-effect waves-light center" type="submit" name="action">Sign Up
            <i class="fa fa-sign-in right"></i>
          </button>
        </form>
        <div class="row">
          <div class="col-md-8">
            Already have an account? Sign-in <a href="/login">here</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src='/js/signup.js'></script>